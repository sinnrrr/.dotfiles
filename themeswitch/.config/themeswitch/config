#!/bin/bash

export CURRENT_THEME_STYLE=LIGHT_THEME

export TERMINAL_DARK_THEME="One-Dark"
export TERMINAL_LIGHT_THEME="One-Light"

THEMESWITCH_CONFIG[$LVIM, $DARK_THEME]="onedark"
THEMESWITCH_CONFIG[$LVIM, $DARK_THEME]="onedark"

THEMESWITCH_CONFIG[$LF_PREVIEW, $DARK_THEME]="OneHalfDark"
THEMESWITCH_CONFIG[$LF_PREVIEW, $LIGHT_THEME]="OneHalfLight"

export THEMESWITCH_CONFIG
