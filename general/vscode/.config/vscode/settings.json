{
    // Editor
    "editor.formatOnSave": true,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontSize": 13,
    "editor.largeFileOptimizations": false,
    // Neovim
    "vscode-neovim.neovimClean": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    // Window
    "window.zoomLevel": 1,
    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.density.editorTabHeight": "compact",
    // Workbench
    "workbench.layoutControl.enabled": false,
    // Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Breadcrumbs
    "breadcrumbs.enabled": false,
    // Files
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.pp": "json"
    },
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor",
    },
    // Terminal
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Propo",
    // Python
    "python.defaultInterpreterPath": "${env:HOME}/.asdf/installs/python/3.13.1",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.terminal.activateEnvInCurrentTerminal": true,
    // Java
    "java.import.gradle.java.home": "/Users/dmytro.soltysiuk.-nd/.asdf/installs/java/corretto-11.0.23.9.1",
    // Terraform
    "[terraform]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.tabSize": 2,
    },
    "[terraform-vars]": {
        "editor.tabSize": 2
    },
    // Git
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",
    "git.confirmSync": false
}
